<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<form method="POST" action="/songs/new">

<p><label for="Name">Song Name:</label> <input type="text" name="Name"></p>
<p><label for="Artist Name">Artist Name:</label> <input type="text" name="Artist Name"></p>
<p><% Genre.all.each do |genre| %>
  <p><%=genre.name.capitalize %>: <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"></p>
<% end %></p>
<p><input type="submit" value="Create"></p>


</form>