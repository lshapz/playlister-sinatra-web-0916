
<form method="POST" action="/songs/<%=@song.slug%>/edit">
<input type="hidden" id="hidden" name="_method" value="patch">

<p><label for="Name">Song Name: </label><input type="text" name="Name" value="<%=@song.name%>"></p>
<p><label for="Artist Name">Artist Name: </label><input type="text" name="Artist Name" value="<%=@song.artist.name%>"></p>
<% Genre.all.each do |genre| %>
  <p><%=genre.name.capitalize %>: <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"  <%='checked' if @song.genres.include?(genre)%>></p>
<% end %>
<p><input type="submit" value="Save"></p>

</form>